<!-- If we're not a signed in user -->
<% unless signed_in_user? %>

	<h3>Log In:</h3>
	<%= form_tag session_path do %>

	  <%= label_tag do %>
	    Email
	    <%= text_field_tag :email %>
	  <% end %>

	  <%= label_tag do %>
	    Password
	    <%= password_field_tag :password %>
	  <% end %>

	  <%= submit_tag "Log in" %>

	<% end %>

<!-- Otherwise, we are signed in -->
<% else %>
	<h3>Howdy, <%= @current_user.username %></h3>
	<%= link_to "Logout", logout_path, :method => :delete, :data => { :confirm => "Are you serious?!" } %>
<% end %>