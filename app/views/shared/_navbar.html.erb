<% if sign_in_user? %>

	<%= link_to "Sign out", session_path, method: :delete %>

<% else %>

	<%= form_tag session_path do %>

		<%= label_tag do %>
			Email
			<%= text_field_tag :email %>
		<% end %>

		<%= label_tag do %>
			Password
			<%= password_field_tag :password %>
		<% end %>

		<%= submit_tag "Sign in" %>

	<% end %>

<% end %>